<!DOCTYPE html>
<html>
  <head>
    <title>Yatut</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <ul class="nav justify-content-end">
    <% if user_signed_in? %>
    <li class="nav-item"><%= link_to('Выйти', destroy_user_session_path, class:"nav-link", method: :delete) %></li>
    <li class="nav-item"><%= link_to "Мой аккаунт", subjects_path,  class:"nav-link" %></li>
    <% else %>
    <li class="nav-item"><%= link_to "Зарегистрироваться", new_user_registration_path, class:"nav-link" %></li>
    <li class="nav-item"><%= link_to "Войти", new_user_session_path, class:"nav-link" %></li>
    <% end %>
  </ul>
        <div class="container">
        <p class="notice "><%= notice%></p>
        <p class="alert"><%= alert%></p>
      <%= yield %>
    </div>
  </body>
</html>
