<h1>Предметы</h1>

<table style="width: auto;" class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>Название</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.name %></td>
        <td><%= link_to 'Показать', subject %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Новый предмет', new_subject_path %>
